-- Este script aumenta as cabeças dos jogadores de forma indetectável no jogo Apocalypse Rising 2, exceto a sua própria cabeça

local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer

-- Função para aumentar a cabeça do jogador
local function aumentarCabeca(player)
    if player and player.Character and player.Character:FindFirstChild("Head") then
        local head = player.Character.Head
        if head:FindFirstChild("Mesh") then
            local mesh = head.Mesh
            -- Aumenta o tamanho da cabeça ajustando a escala do Mesh
            mesh.Scale = Vector3.new(2, 2, 2) -- Ajuste o tamanho conforme necessário
        end
    end
end

-- Loop para aumentar a cabeça de todos os jogadores a cada segundo, exceto a sua própria
while true do
    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= localPlayer then
            aumentarCabeca(player)
        end
    end
    wait(1) -- Aguarda 1 segundo antes de verificar novamente
end
